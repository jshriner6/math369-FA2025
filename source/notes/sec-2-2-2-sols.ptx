                <exercise workspace="4in">
                    <title>Example: Matrix-Matrix Multiplication</title>
                    <statement>
                        <p>
                            Let 
                            <me>
                            A= \left[\begin{array}{rr}
                            3 \amp 2  \\
                            0 \amp 1  \\
                            -1 \amp 4 
                            \end{array}\right]
                            ,
                            B = \left[\begin{array}{rrr}
                            2 \amp 0 \amp 1  \\
                            1 \amp 5 \amp 6 \\
                            
                            \end{array}\right]\text{.}
                            </me>
                        </p>
                    </statement>
                    <solution>
						<p>
							<m>AB = \left[ 
								A\twovec{2}{1} A\twovec{0}{5} A\twovec{1}{6}
								\right] = 
							\left[\begin{array}{rrr}
                            8 \amp 10 \amp 15  \\
                            1 \amp 5 \amp 6 \\
							2 \amp 20 \amp 23 \\
                            
                            \end{array}\right]
						</m>
						</p>
					</solution>
                    
                </exercise>
